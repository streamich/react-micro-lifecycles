{
  "name": "react-micro-lifecycles",
  "version": "1.0.0",
  "description": "Micro life-cycles form React DOM nodes",
  "main": "lib/index.js",
  "scripts": {
    "clean": "rimraf lib",
    "build": "npm run clean && babel src --out-dir lib --ignore '__tests__/*'",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "storybook": "start-storybook -p 6006",
    "build-storybook": "build-storybook",
    "prettier": "prettier --write '**/*.js'",
    "precommit": "lint-staged"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/streamich/react-micro-lifecycles.git"
  },
  "peerDependencies": {
    "react": "*",
    "react-dom": "*"
  },
  "dependencies": {
  },
  "devDependencies": {
    "@storybook/addon-actions": "3.4.12",
    "@storybook/addon-links": "3.4.12",
    "@storybook/addons": "5.1.9",
    "@storybook/react": "3.4.12",
    "babel-cli": "6.26.0",
    "babel-core": "6.26.3",
    "babel-polyfill": "6.26.0",
    "babel-preset-es2015": "6.24.1",
    "babel-preset-es2016": "6.24.1",
    "babel-preset-es2017": "6.24.1",
    "babel-preset-flow": "6.23.0",
    "babel-preset-stage-0": "6.24.1",
    "jest": "23.6.0",
    "jest-tap-reporter": "1.9.0",
    "prettier": "1.18.2",
    "react": "16.8.6",
    "react-dom": "16.8.6",
    "rimraf": "2.6.3",
    "lint-staged": "7.3.0",
    "mol-conventional-changelog": "1.4.0",
    "enzyme": "3.10.0",
    "enzyme-adapter-react-16": "1.11.2"
  },
  "lint-staged": {
    "**/*.js": [
      "prettier --write",
      "git add"
    ]
  },
  "prettier": {
    "printWidth": 120,
    "tabWidth": 4,
    "useTabs": false,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5",
    "bracketSpacing": false,
    "jsxBracketSameLine": false
  },
  "jest": {
    "transformIgnorePatterns": [],
    "testRegex": ".*/__tests__/.*\\.(test|spec)\\.(jsx?)$",
    "setupFiles": [
      "./src/__tests__/setup.js"
    ],
    "moduleFileExtensions": [
      "js",
      "jsx",
      "json"
    ],
    "reporters": [
      "jest-tap-reporter"
    ]
  },
  "babel": {
    "presets": [
      "es2015",
      "es2016",
      "es2017",
      "stage-0",
      "flow"
    ],
    "comments": false
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/mol-conventional-changelog"
    }
  },
  "keywords": [
    "jsx",
    "react",
    "micro",
    "lifecycles"
  ]
}
